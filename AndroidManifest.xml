<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plentyofpitches"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.example.plentyofpitches.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.plentyofpitches.NewItemActivity"
            android:label="@string/title_activity_new_item"
            android:parentActivityName="com.example.plentyofpitches.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.plentyofpitches.MainActivity" />
        </activity>
        <activity
            android:name="com.example.plentyofpitches.ExistingItemActivity"
            android:label="@string/title_activity_existing_item"
            android:parentActivityName="com.example.plentyofpitches.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.plentyofpitches.MainActivity" />
        </activity>
        <activity
            android:name="com.example.plentyofpitches.BrowseItemActivity"
            android:label="@string/title_activity_browse_item" >
        </activity>
    </application>

</manifest>
